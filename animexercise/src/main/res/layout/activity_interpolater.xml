<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterpolatorActivity">

    <TextView
        android:id="@+id/tv_hello_world"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="64dp"
        android:text="Hello world!"
        android:textAllCaps="false"
        android:background="#ff00ff" />

    <Button
        android:id="@+id/btn_a_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_hello_world"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_a"
        android:layout_marginTop="36dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:text="AccelerateDecelerate"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_a_d"
        app:layout_constraintLeft_toRightOf="@id/btn_a_d"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Accelerate"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_a_d"
        app:layout_constraintLeft_toLeftOf="@id/btn_a_d"
        app:layout_constraintRight_toLeftOf="@+id/btn_ant"
        android:layout_marginTop="8dp"
        android:text="Decelerate"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_ant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_d"
        app:layout_constraintLeft_toRightOf="@id/btn_d"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Anticipate"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_ao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_d"
        app:layout_constraintLeft_toLeftOf="@id/btn_a_d"
        app:layout_constraintRight_toLeftOf="@+id/btn_bo"
        android:layout_marginTop="8dp"
        android:text="AnticipateOvershoot"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_bo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_ao"
        app:layout_constraintLeft_toRightOf="@id/btn_ao"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Bounce"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_cy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_ao"
        app:layout_constraintLeft_toLeftOf="@id/btn_ao"
        app:layout_constraintRight_toLeftOf="@+id/btn_li"
        android:layout_marginTop="8dp"
        android:text="Cycle"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_cy"
        />

</android.support.constraint.ConstraintLayout>