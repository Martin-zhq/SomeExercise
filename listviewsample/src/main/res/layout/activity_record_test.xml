<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.xxt.audiorecord.RecordTestActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_record_wav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/view_record_wav"/>


    <Button
        android:id="@+id/btn_record_amr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_record_amr"/>

    <Button
        android:id="@+id/btn_stop_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_stop"/>

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />
</LinearLayout>
